<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- ========================= Application Settings ========================= -->
	<app 
		main="Main"
		file="NGsEngine"
		title="NG's Engine"
		packageName="com.hirosky.ngsengine"
		package="com.hirosky.ngsengine"
		company="HiroSky"
		version="0.0.0"
		preloader="flixel.system.FlxPreloader"
	/>

	<haxedef name="CHARTING" />

	<!-- Identifiers & Metadata -->
	<set name="APP_ID" value="0x0100f6c013bbc000" />
	<set name="SWF_VERSION" value="11.8" />

	<!-- ========================== Window Settings ============================= -->
	<!-- Default (all targets) -->
	<window width="1280" height="720" fps="60" background="#000000" hardware="true" vsync="false" allow-high-dpi="true" />

	<!-- Platform-specific -->
	<window if="html5" resizable="true" />
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="true" vsync="false" />
	<window if="mobile" orientation="landscape" fullscreen="true" width="0" height="0" resizable="false" />
	<window if="switch" orientation="landscape" fullscreen="true" width="0" height="0" resizable="true" />

	<!-- =========================== Build Settings ============================= -->
	<set name="BUILD_DIR" value="export/debug/x64" if="debug" />
	<set name="BUILD_DIR" value="export/release/x64" unless="debug" />
	<set name="BUILD_DIR" value="export/release/x86" if="32bits" />
	<classpath name="source" />

	<!-- ============================ Assets ==================================== -->

	<!-- Shared assets -->
	<assets path="assets/fonts" />
	<assets path="assets/shared" exclude="*.ogg" if="web" embed="true" />
	<assets path="assets/shared" exclude="*.mp3" unless="web" embed="true" />
	<assets path="assets/base_game" rename="assets" exclude="*.ogg" if="web"/>
	<assets path="assets/base_game" rename="assets" exclude="*.mp3"  unless="web"/>

	<!-- Extra -->
	<assets path="docs/EngineFile.json" rename="engine.json" />
	<assets path="docs/CHANGELOG.md" rename="updates.txt" />

	<!-- =========================== Libraries ================================== -->
	<haxelib name="flixel" version="6.1.2" />
	<haxelib name="flixel-addons" version="4.0.1" />
	<haxelib name="hxdiscord_rpc" version="1.3.0" />
	<haxelib name="hxcpp-debug-server" if="debug" />

	<!-- ========================== Haxedefines ================================= -->
	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	<haxedef name="NAPE_RELEASE_BUILD" unless="debug" />

	<!-- ============================= Icons ==================================== -->
	<assets path='docs/icons/iconOG.png' rename='icon.png' if="linux || mac" />
	<icon path="docs/icons/iconOG.png" />
	<icon path="docs/icons/icon64.png" size='64' />
	<icon path="docs/icons/icon32.png" size='32' />
	<icon path="docs/icons/icon16.png" size='16' />
</project>